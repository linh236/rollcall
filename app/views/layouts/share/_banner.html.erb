<% if current_user.present? %>
  <% if current_user.admin == 2 %>
    <%= image_tag("banner_admin", class:"banner", data: { title: 'Banner' })%>
  <% elsif current_user.admin == 1 %>
    <%= image_tag("banner_teacher", class:"banner", data: { title: 'Banner' })%>
  <% elsif current_user.admin == 0 %>
    <%= image_tag("banner_student", class:"banner", data: { title: 'Banner' })%>
  <% end %>
<% else %>
   <%= image_tag("banner", class:"banner", data: { title: 'Banner' })%>
<% end %>
